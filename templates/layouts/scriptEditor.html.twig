{% extends "base.html.twig" %}

{% block title %}RocketFuel - Editor{% endblock %}

{% block content %}
    <div class="editor">
        <form action="" method="post" class="editor-form">
            <div class="editor-meta-container">
                <input type="text" name="title" class="editor-input-title" placeholder="Titel" required>
                <input type="text" name="description" class="editor-input-description" placeholder="Beschreibung" required>
                <select name="packageManager" class="editor-input-packageManager" required>
                    <option value="packageManager">packageManager</option>
                </select>
            </div>

            <div class="editor-content-container">
                <div style="background: grey" class="editor-menu-container">menu</div>
                <div class="ts-module-ScriptEditor">
                    <div class="codemirror-editor-container" style="height: 300px; border: 1px solid #ccc;"></div>
                    <div class="editor-buttons">
                        <button type="submit" class="btn btn-submit">Speichern</button>
                        <button class="btn btn-cancel">Abbrechen</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
